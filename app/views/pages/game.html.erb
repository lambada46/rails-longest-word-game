<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <h1>Game</h1>
      <p>Welcome to the longest game in the world!</p>

      <h3><%= @grid.join(" ")%></h3>

      <form action="score" method="post" class="form-inline">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="guess" placeholder="Take your chance" class="form-control">
        <input type="hidden" name="start_time" value="<%= @start_time %>">
        <input type="hidden" name="grid" value="<%= @grid.join(',') %>">
        <input type="submit" value="Go!" class="btn btn-primary ">
      </form>
    </div>
  </div>
</div>

